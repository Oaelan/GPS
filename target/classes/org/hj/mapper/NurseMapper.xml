<?xml version="1.0" encoding="UTF-8"?>
 
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.hj.mapper.NurseMapper">

	<!-- 환자 리스트 가져옴 -->
	<select id="getPList" resultType="org.hj.model.PatientVO" parameterType="org.hj.model.UserVO">
		select p_no,p_name
		from patient
		where s_id = #{id}
	</select>

		
	<!-- 환자 위치 가져오기 -->
	<select id="getPatientGps" resultType="org.hj.model.PatientGPSVO" parameterType="org.hj.model.PatientGPSVO">
		select *
		from patient_GPS
		where p_no = #{p_no}
	</select>


	<!-- 층수를 받아와서 해당 층에 있는 환자들 위치 가져오기 -->
	<!-- parameterType을 따로 설정하지 않고 그냥 변수이름 바로 넣었음, -->
	<select id="getPatientGpsByFloor" parameterType="map" resultType="org.hj.model.PatientGPSVO">
		SELECT p.p_no, p.p_name, p.p_gender, p.p_phone,
		p.p_room, gps.x, gps.y, gps.z
		FROM patient p
		JOIN patient_GPS gps ON p.p_no = gps.p_no
		WHERE p.s_id = #{userId}
		AND gps.z = #{z}
	</select>

</mapper>